{{> navBar this}}
{{> header this}}
{{> messages this}}
<script>
    function buy_clicked(event, _id) {
        console.log("product id", _id)
        event.preventDefault();
        Model.buy(_id)
            .done(function (cart) {
                const item = cart.items.filter((i) => i.product === _id)[0]
                Messages.success.push(`You have added ${item.title} to the cart! `)
                navigateTo('/', event);
            })
            .fail(function () {
                console.error('buy error',
                    error.status,
                    error.statusText,
                    error.responseJSON.message);
            })
    }
</script>
<main>
    <div class="container">
        <div class="row">
            {{#each this.products}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                <div class="card border-light mb-3">
                    <div class="card-header border-light">{{category}}</div>
                    <img class="card-img-top" src="{{this.url}}" alt="{{title}} cover">
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{description}}</p>
                    </div>
                    
                    <div class="card-footer bg-white text-right">
                        <div class="d-flex justify-content-between align-items-stretch">
                            <span>
                                <h4>{{formatPrice this.price}}</h4>
                            </span>
                            <button class="btn btn-primary" onclick="buy_clicked(event, `{{_id}}`)" {{#unless ../user}}
                                disabled {{/unless}}><i class="fas fa-cart-plus"></i>&nbsp;Buy</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>
